{
  "name": "frontend-starter-kit",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/springload/frontend-starter-kit"
  },
  "engines": {
    "node": "^6.8.0",
    "npm": "^3.10.10"
  },
  "eslintConfig": {
    "extends": "springload"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "> 1%",
              "IE 11"
            ]
          }
        }
      ],
      "react"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-react": "^6.23.0",
    "browser-sync": "^2.18.8",
    "critical": "^0.8.4",
    "eslint": "3.19.0",
    "eslint-config-springload": "1.0.2",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "3.0.2",
    "eslint-plugin-react": "6.10.3",
    "gulp": "^3.9.1",
    "gulp-parker": "^0.1.0",
    "gulp-pleeease": "^2.0.2",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^2.4.1",
    "gulp-svgmin": "^1.1.2",
    "gulp-svgstore": "^6.1.0",
    "gulp-util": "^3.0.8",
    "jest": "^19.0.2",
    "react-test-renderer": "^15.3.2",
    "sass-lint": "^1.10.2",
    "sass-module-importer": "^1.4.0",
    "webpack": "^2.2.1"
  },
  "dependencies": {
    "normalize.css": "^7.0.0",
    "object-assign": "^4.1.1",
    "promise": "^7.1.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "springload-analytics.js": "^2.0.0",
    "whatwg-fetch": "^2.0.3"
  },
  "scripts": {
    "start": "npm run lint:versions -s && npm run watch -s",
    "linter:js": "eslint",
    "linter:sass": "sass-lint -v -q",
    "lint:versions": "NVM_VERSION=$(cat .nvmrc); NODE_VERSION=$(node --version); echo $NODE_VERSION | grep -q $NVM_VERSION && echo \"✓ running node $NODE_VERSION - all clear\" || (echo \"✗ running node $NODE_VERSION - expected $NVM_VERSION. Use nvm to install the right version.\" && exit 1)",
    "lint:js": "npm run linter:js -s -- .",
    "lint:sass": "npm run linter:sass -s",
    "lint": "npm run lint:versions -s && npm run lint:js -s && npm run lint:sass -s",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "./bin/ci-test.sh",
    "dist": "NODE_ENV=production gulp build",
    "build": "NODE_ENV=development gulp build",
    "critical:css": "gulp critical:css",
    "report:css": "gulp report:css",
    "js": "gulp js",
    "css": "gulp css",
    "svg": "gulp svg",
    "watch": "NODE_ENV=development gulp watch",
    "lock": "npm run lint:versions -s && npm shrinkwrap --dev && sed -i '' 's/https:/http:/g' npm-shrinkwrap.json",
    "deploy": "git push origin master:deploy/production"
  }
}
